generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  username String
  password String

  avatar String?

  profiles Profile[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([username])
  @@index([username])
}

model Profile {
  id String @id @default(cuid())

  name   String
  avatar String?

  email String?
  phone String?

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name])
  @@index([ownerId, name])
}
