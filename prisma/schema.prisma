generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CardType {
  debit
  credit
}

model User {
  id String @id @default(cuid())

  username String
  password String

  avatar String?

  profiles Profile[]

  accounts Account[]
  cards    Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([username])
  @@index([username])
}

model Profile {
  id String @id @default(cuid())

  name   String
  avatar String?

  email String?
  phone String?

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name])
  @@index([ownerId, name])
}

model Account {
  id String @id @default(cuid())

  name String

  bank      String
  accountNo String
  ifscCode  String

  balance Float @default(0)

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  cards Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id String @id @default(cuid())

  name String

  cardNo String
  expiry String
  cvv    String

  type CardType

  bankId String
  bank   Account @relation(fields: [bankId], references: [id])

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
